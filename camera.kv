<AppHome>:
    BoxLayout:
        orientation: "vertical"

        KivyCamera:
            id: app_cam

        BoxLayout:
            orientation: "horizontal"
            height: 20
            size_hint_y: None

            Button:
                id: button_start
                size_hint: 0.5,1
                text: "Start"
                on_press: root.dostart()

            Button:
                id: button_exit
                text: "Quit"
                size_hint: 0.5,1
                on_press: root.doexit()